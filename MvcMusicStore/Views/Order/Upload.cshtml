@{
    ViewBag.Title = "Upload Files";
}
<h2>@ViewBag.title</h2>
<form method="post" enctype="multipart/form-data" asp-controller="Order" asp-action="Upload">
    <div class="form-group">
        <div class="col-md-10">
            <p>Upload this file:</p>
            <input type="file" name="uploadFile" /> 
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <p>to this filename on server (default original filename)</p>
            <input type="text" name="targetFileName" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <input type="submit" value="Upload" />
        </div>
    </div>
</form>

