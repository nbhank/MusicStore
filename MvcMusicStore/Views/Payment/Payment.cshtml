@model MvcMusicStore.Models.Payment
{
    ViewBag.Title = "Payment";
}

<h2>PayUMoney Form MVC</h2>
@using (Html.BeginForm())
{
    <div style="margin-left:20px">
        @Html.Label("Amount")<br /> @Html.TextBox("txtamount")<br />
        @Html.Label("First Name")<br />
        @Html.TextBox("firstname")<br />
        @Html.ValidationMessageFor(model => model.firstName, " ", new { @class = "text-danger" })
        @Html.Label("Email Id")<br />
        @Html.TextBox("txtemail")<br />
        @Html.ValidationMessageFor(model => model.email, " ", new { @class = "text-danger" })
        @Html.Label("Product Information")<br />
        @Html.TextArea("prodinfo")<br />
        @Html.Label("Phone")<br />
        @Html.TextBox("phone")<br />
        <button type="submit">Submit</button>
    </div>


}
